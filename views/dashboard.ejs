<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GeoFacts Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="bg-gradient-to-br from-blue-100 via-blue-300 to-blue-500 dark:from-gray-900 dark:via-gray-800 dark:to-gray-700 min-h-screen">
  <%- include("partials/navbar.ejs") %>
  <div class="max-w-5xl mx-auto mt-10 p-6 bg-white dark:bg-gray-900 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-blue-700 mb-4">Welcome, <%= user.username || user.name %>!</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gradient-to-br from-green-400 to-blue-300 rounded-lg p-6 shadow text-center">
        <div class="text-4xl mb-2">✅</div>
        <div class="text-2xl font-bold"><%= visitedCount %></div>
        <div class="text-lg">Countries Visited</div>
      </div>
      <div class="bg-gradient-to-br from-yellow-300 to-pink-300 rounded-lg p-6 shadow text-center">
        <div class="text-4xl mb-2">⭐</div>
        <div class="text-2xl font-bold"><%= wishlistCount %></div>
        <div class="text-lg">Wishlist</div>
      </div>
      <div class="bg-gradient-to-br from-blue-400 to-purple-400 rounded-lg p-6 shadow text-center">
        <div class="text-4xl mb-2">📝</div>
        <div class="text-2xl font-bold"><%= notesCount %></div>
        <div class="text-lg">Notes</div>
      </div>
    </div>
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-2 text-blue-700">Visited Countries</h2>
      <div class="flex flex-wrap gap-2">
        <% visitedCountries.forEach(function(code) { %>
          <div class="w-16 h-16 bg-green-100 rounded flex flex-col items-center justify-center shadow">
            <img src="https://flagcdn.com/48x36/<%= code.toLowerCase() %>.png" alt="<%= code %>" class="w-8 h-6 mb-1 rounded" />
            <span class="text-xs font-semibold"><%= code %></span>
          </div>
        <% }) %>
        <% if (visitedCountries.length === 0) { %>
          <span class="text-gray-500">No countries marked as visited yet.</span>
        <% } %>
      </div>
    </div>
    <div>
      <h2 class="text-xl font-semibold mb-2 text-yellow-700">Wishlist</h2>
      <div class="flex flex-wrap gap-2">
        <% wishlistCountries.forEach(function(code) { %>
          <div class="w-16 h-16 bg-yellow-100 rounded flex flex-col items-center justify-center shadow">
            <img src="https://flagcdn.com/48x36/<%= code.toLowerCase() %>.png" alt="<%= code %>" class="w-8 h-6 mb-1 rounded" />
            <span class="text-xs font-semibold"><%= code %></span>
          </div>
        <% }) %>
        <% if (wishlistCountries.length === 0) { %>
          <span class="text-gray-500">No countries in wishlist yet.</span>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html> 